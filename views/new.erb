<form method="post" action="/students">
  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  />

  <label for="last-name-field">Last Name:</label>
  <input
  type="text"
  name="last_name"
  id="last-name-field"
  />

  <label for="age-field">Age:</label>
  <input
  type="number"
  name="age"
  id="age-field"
  />

<!-- This is the drop down menu. Value is they hash value and name is the hash key -->
  <label for="house-selection">House:</label>
  <select name="house_id" id="house-selection">
    <% @houses.each do |house| %>
    <option value="<%=house.id%>"><%=house.name%></option>
    <% end %>
  </select>

  <input type="submit" value="Add Student">
</form>